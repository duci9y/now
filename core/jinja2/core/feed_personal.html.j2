        <main role="main" class="container">
                <h3>My events</h3>
                <div id="personal_feed_display">
                {% for event in hosted_events %}
                        <a href="/event/{{event.id}}">
                        <div class="media row">
                               <div class="media-left media-middle">
                                       <img src="http://graph.facebook.com/{{event.host.fbid}}/picture?type=normal" class="media-object" style="width:60px">
                               </div>
                               <div class="media-body">
                                       <h4 class="media-heading">{{event.host.first_name}} {{event.host.last_name}}</h4>
                                       <div class="feed_event_info row">
                                               <div class="col">
                                                       {{event.location_name}}
                                               </div>
                                               <div class="col">
                                                       üïí {{event.start_time.strftime("%y/%m/%d %H:%M") + " - " + event.end_time.strftime("%H:%M")}}
                                               </div>
                                       </div>
                                       <p>{{event.description}}</p>
                               </div>
                        </div>
                        </a>
                {% endfor %}
                </div>
                <hr />
                <h3>Interested events</h3>
                <div id="interest_feed_display">
                {% for event in interest_events %}
                        <a href="/event/{{event.id}}">
                        <div class="media row">
                               <div class="media-left media-middle">
                                       <img src="http://graph.facebook.com/{{event.host.fbid}}/picture?type=normal" class="media-object" style="width:60px">
                               </div>
                               <div class="media-body">
                                       <h4 class="media-heading">{{event.host.first_name}} {{event.host.last_name}}</h4>
                                       <div class="feed_event_info row">
