{% extends 'layout.html.j2' %}
  
    {% block head %}
        <link rel="stylesheet" type="text/css" href="{{ static('core/profile.css') }}">
        <script src="https://use.fontawesome.com/944a8f6eea.js"></script>
        <link href="https://fonts.googleapis.com/css?family=Arvo|Lato" rel="stylesheet">
        <link href="{{static('core/feed_global_styles.css')}}" type="text/css" rel="stylesheet" />
    {% endblock %}


{% block body %}
<nav class="navbar navbar-dark bg-dark navbar-expand-sm fixed-top" id="new-dark">
    <a class="navbar-brand" id="brandname" href="/"><i class="fa fa-asterisk" aria-hidden="true"></i>Flare</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link active" href="#">My Events<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/profile">Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/create_event">Create Event</a>
            </li>
        </ul>
    </div>
</nav>

        <main role="main" class="container">
                <h3>My events</h3>
                <div id="personal_feed_display">
                {% for event in hosted_events %}
                        <a href="/event/{{event.id}}">
                        <div class="media row">
                               <div class="media-left media-middle">
                                       <img src="http://graph.facebook.com/{{event.host.fbid}}/picture?type=normal" class="media-object" style="width:60px">
                               </div>
                               <div class="media-body">
                                       <h4 class="media-heading">{{event.host.first_name}} {{event.host.last_name}}</h4>
                                       <div class="feed_event_info row">
                                               <div class="col">
                                                       {{event.location_name}}
                                               </div>
                                               <div class="col">
                                                       ðŸ•’ {{event.start_time.strftime("%y/%m/%d %H:%M") + " - " + event.end_time.strftime("%H:%M")}}
                                               </div>
                                       </div>
                                       <p>{{event.description}}</p>
                               </div>
                        </div>
                        </a>
                {% endfor %}
                </div>
                <hr />
                <h3>Interested events</h3>
                <div id="interest_feed_display">
                {% for event in interest_events %}
                        <a href="/event/{{event.id}}">
                        <div class="media row">
                               <div class="media-left media-middle">
                                       <img src="http://graph.facebook.com/{{event.host.fbid}}/picture?type=normal" class="media-object" style="width:60px">
                               </div>
                               <div class="media-body">
                                       <h4 class="media-heading">{{event.host.first_name}} {{event.host.last_name}}</h4>
                                       <div class="feed_event_info row">
                                               <div class="col">
                                                       {{event.location_name}}
                                               </div>
                                               <div class="col">
                                                       ðŸ•’ {{event.start_time.strftime("%y/%m/%d %H:%M") + " - " + event.end_time.strftime("%H:%M")}}
                                               </div>
                                       </div>
                                       <p>{{event.description}}</p>
                               </div>
                       </div>
                       </a>
                {% endfor %}
                </div>
        </div>

